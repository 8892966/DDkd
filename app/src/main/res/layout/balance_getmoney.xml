<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#00ccff"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <TextView
            style="@style/head_button_back"
            android:id="@+id/tv_head_fanghui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textSize="25sp" />
    </RelativeLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="15dip"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="提现至账户："
            android:textSize="20sp" />
        <EditText
            android:id="@+id/counter"
            android:singleLine="true"
            android:hint="请输入支付宝账号"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:padding="10dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提款金额："
            android:textSize="15sp" />
        <TextView
            android:id="@+id/yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tixian"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  提   现："
            android:textSize="20sp" />
        <EditText
            android:layout_toRightOf="@id/tixian"
            android:id="@+id/getmoney"
            android:phoneNumber="true"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="亲，满100才可以提现喔"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="20dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  提款人姓名："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Tname"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账户人姓名"
            android:textSize="20sp"/>
    </LinearLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="20dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  备   注  ："
            android:textSize="20sp" />

        <EditText
            android:maxLines="3"
            android:id="@+id/beizhu"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="不超过10个字"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="35dip"
        android:padding="20dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="确认"
            android:id="@+id/sure"
            android:background="@drawable/click_button"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/exitgetmoney"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:text="取消"
            android:textSize="20sp"
            android:background="@drawable/click_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>