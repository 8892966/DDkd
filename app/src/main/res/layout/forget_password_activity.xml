<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/head"
        >
        <TextView
            style="@style/head_button_back"
            android:id="@+id/tv_head_fanghui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_web_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="250sp" />
    <RelativeLayout
        android:id="@+id/rl_shuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/biankuan" />

        <LinearLayout
            android:id="@+id/ll_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_number"
                style="@style/zhuche1_text_shuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号" />

            <EditText
                android:inputType="phone"
                android:id="@+id/et_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入手机号码"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/dingdang_item_button"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="验证码"
                android:textColor="#ffffff" />
        </LinearLayout>

        <View
            android:layout_below="@id/ll_phone_number"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/biankuan" />

        <LinearLayout
            android:id="@+id/ll_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_phone_number"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yanzhengma"
                style="@style/zhuche1_text_shuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码" />

            <EditText
                android:id="@+id/et_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入短信验证码"
                android:singleLine="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_yanzhengma"
            android:background="@color/biankuan" />
        <LinearLayout
            android:id="@+id/ll_new_password"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_yanzhengma"
            >
            <TextView
                android:id="@+id/tv_new_password"
                style="@style/zhuche1_text_shuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码" />
            <EditText
                android:inputType="phone"
                android:id="@+id/et_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入新的密码"
                android:singleLine="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_new_password"
            android:background="@color/biankuan" />
        <LinearLayout
            android:id="@+id/ll_new_password2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_new_password"
            >
            <TextView
                android:id="@+id/tv_new_password2"
                style="@style/zhuche1_text_shuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码" />
            <EditText
                android:inputType="phone"
                android:id="@+id/et_new_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请再次输入密码"
                android:singleLine="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_new_password2"
            android:background="@color/biankuan" />
    </RelativeLayout>
    <TextView
        android:id="@+id/commitpassword"
        style="@style/zhuce_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="#ffffff" />
</RelativeLayout>
