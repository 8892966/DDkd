<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title1"
        android:background="#00ccff"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <ImageView
            android:id="@+id/setExit"
            android:layout_centerVertical="true"
            style="@style/head_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="25dip"
            android:text="意见反馈"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/title1"
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:background="#cccccc"/>
    <RelativeLayout
        android:id="@+id/title2"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <TextView
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:text="手机号码:"
            android:textSize="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/userid"
            android:padding="5dip"
            android:hint="请输入您的手机号"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/editview"
            android:textSize="20dip"
            android:phoneNumber="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title"
            android:layout_width="match_parent"
            android:layout_height="35dip" />

    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/title2"
        android:layout_width="match_parent"
        android:layout_height="15dip"
        android:background="#cccccc"/>
    <EditText
        android:id="@+id/messageedit"
        android:layout_below="@id/view2"
        android:layout_margin="5dip"
        android:padding="10dip"
        android:textSize="20dip"
        android:hint="请输入您的意见"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@drawable/editview"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="280dip" />
    <RelativeLayout
        android:layout_above="@id/bottom"
        android:layout_below="@id/messageedit"
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/Fcommit"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/login_buttoncolor"
        android:text="提交"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="5dip" />

</RelativeLayout>