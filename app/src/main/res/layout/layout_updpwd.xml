<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#0767c8"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dip"
            android:text="修改密码"/>
        <ImageView
            android:id="@+id/setExit"
            android:layout_centerVertical="true"
            style="@style/head_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#cccccc"
        android:layout_width="wrap_content"
        android:layout_height="15dip" />
    <LinearLayout
        android:padding="5dip"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">>

        <TextView
            android:id="@+id/tv_phone_number"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手  机  号:" />

        <EditText
            android:layout_marginLeft="10dip"
            android:textSize="20dip"
            android:background="@null"
            android:inputType="phone"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:hint="请输入手机号码"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_button_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/dingdang_item_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:text="验证码"
            android:textColor="#ffffff" />
    </LinearLayout>
    <View
        android:background="#ccccff"
        android:layout_width="wrap_content"
        android:layout_height="1dip" />
    <LinearLayout
        android:id="@+id/ll_yanzhengma"
        android:padding="5dip"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_yanzhengma"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验  证  码:" />

        <EditText
            android:padding="10dip"
            android:textSize="20dip"
            android:background="@null"
            android:id="@+id/yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入短信验证码"
            android:singleLine="true" />
    </LinearLayout>
    <View
        android:background="#ccccff"
        android:layout_width="wrap_content"
        android:layout_height="1dip" />
    <LinearLayout
        android:padding="5dip"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dip"
            android:text=" 新 密 码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:hint="请输入新密码"
            android:id="@+id/password2"
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="40dip" />
    </LinearLayout>
    <View
        android:background="#ccccff"
        android:layout_width="wrap_content"
        android:layout_height="1dip" />
    <LinearLayout
        android:padding="5dip"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dip"
            android:text="确认密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:id="@+id/password3"
            android:hint="请再次确认密码"
            android:textSize="20sp"
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="40dip" />
    </LinearLayout>
    <View
        android:background="#ccccff"
        android:layout_width="wrap_content"
        android:layout_height="1dip" />
    <TextView
        android:layout_marginTop="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:id="@+id/sure"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/login_buttoncolor"
        android:text="确  认"
        android:textSize="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>