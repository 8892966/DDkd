<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/head"
        >
        <TextView
            android:clickable="true"
            android:focusable="true"
            style="@style/head_button_back"
            android:id="@+id/tv_head_fanghui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_button_yijie"
            style="@style/dingdang_buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:text="已接订单" />

        <View
            android:layout_width="0.2dip"
            android:layout_height="30dip"
            android:background="@color/biankuan" />

        <TextView
            android:id="@+id/tv_button_daisong"
            style="@style/dingdang_buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:text="待送订单" />

        <View
            android:layout_width="0.2dip"
            android:layout_height="30dip"
            android:background="@color/biankuan" />

        <TextView
            android:id="@+id/tv_button_wangchen"
            style="@style/dingdang_buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:text="完成订单" />

        <View
            android:layout_width="0.2dip"
            android:layout_height="30dip"
            android:background="@color/biankuan" />

        <TextView
            android:id="@+id/tv_button_quxiao"
            style="@style/dingdang_buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:text="取消订单" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/biankuan" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="#ffffff"
        />
    <ListView
        android:padding="5dp"
        android:id="@+id/lv_order_details"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="#ffffff"
        />
    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:text="说明：姓名手机为快递单上的姓名手机，地址为收货地址\n订单排序以时间排序，新订单在后，老订单在前"/>
</LinearLayout>
