<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/backgrod"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/head">
            <TextView
                android:id="@+id/tv_head_fanghui"
                style="@style/head_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:textColor="@color/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人信息"
                android:textSize="25sp" />
        </RelativeLayout>
        <View
            android:id="@+id/view01"
            android:layout_below="@id/title"
            android:background="@color/spacing"
            android:layout_width="match_parent"
            android:layout_height="15dip"/>
        <RelativeLayout
            android:layout_below="@id/view01"
            android:background="@drawable/clickview"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/changeimage"
            android:layout_width="match_parent"
            android:layout_height="80dip">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:textSize="20sp"
                android:text=" 头    像"
                android:padding="5dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/toright"
                android:layout_marginRight="5dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/toright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toLeftOf="@id/toright"
                android:layout_marginRight="10dip"
                android:id="@+id/userimage"
                android:layout_centerVertical="true"
                android:src="@drawable/userimage"
                android:layout_width="70dip"
                android:layout_height="70dip"/>

        </RelativeLayout>
        <View
            android:id="@+id/view02"
            android:layout_below="@id/changeimage"
            android:background="@color/spacing"
            android:layout_width="match_parent"
            android:layout_height="10dip"/>
        <ScrollView
            android:layout_above="@id/bottom"
            android:layout_below="@id/view02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textSize="20sp" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学院"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="right"
                        android:id="@+id/collage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="right"
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="@color/spacing"
                    android:layout_width="match_parent"
                    android:layout_height="10dip"/>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/detailsnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长号"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="right"
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短号"
                        android:textSize="20sp" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/shortphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级"
                        android:textSize="20sp" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />
                </LinearLayout>
                <View
                    android:layout_margin="5dip"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"/>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="15dip" />
    </LinearLayout>
</RelativeLayout>