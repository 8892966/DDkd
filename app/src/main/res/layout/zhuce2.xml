<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dip"
        android:layout_below="@id/rl_head"
        android:id="@+id/ll_dian"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:src="@drawable/zhuce2" />
    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_dian"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logocaise"/>

    <RelativeLayout
        android:layout_below="@id/logo"
        android:id="@+id/rl_shuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>
        <LinearLayout
            android:background="#ffffff"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:id="@+id/ll_phone_number"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
            <EditText
                android:gravity="center"
                android:background="@null"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="6~32位密码"
                />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="1dip"
            android:id="@+id/view2"
            android:layout_below="@id/ll_phone_number"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>
        <LinearLayout
            android:background="#ffffff"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:id="@+id/ll_yanzhengma"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <EditText
                android:gravity="center"
                android:background="@null"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入密码"
                />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="10dip"
            android:id="@+id/view3"
            android:layout_below="@id/ll_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>
    </RelativeLayout>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/rl_shuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#55000000"
        android:textSize="13dp"
        android:text="(保证您的资金安全，密码请勿过于简单)"
        />
</RelativeLayout>
