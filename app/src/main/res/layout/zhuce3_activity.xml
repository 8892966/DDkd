<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgrod"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/head2">
        <TextView
            style="@style/head_button_back"
            android:id="@+id/tv_head_fanghui"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="25sp" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dip"
        android:layout_below="@id/rl_head"
        android:id="@+id/ll_4text"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:src="@drawable/zhuce3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/ll_4text"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/iv_touxiang"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logotouxiang" />
            <View
                android:id="@+id/view"
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/iv_touxiang" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_touxiang"
                android:layout_alignLeft="@id/iv_touxiang"
                android:layout_alignRight="@id/iv_touxiang"
                android:gravity="center"
                android:text="点击上传头像"
                android:textSize="15dp" />
            <LinearLayout
                android:background="#FFFFFF"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:layout_marginRight="20dip"
                    android:layout_marginLeft="10dip"
                    android:background="@null"
                    android:textSize="20dip"
                    android:id="@+id/et_name"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的姓名"/>
            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_item1" />
            <LinearLayout
                android:background="#FFFFFF"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="20dip"
                    android:background="@null"
                    android:textSize="20dip"
                    android:id="@+id/et_sex"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的性别"/>
            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_sex" />
            <LinearLayout
                android:background="#ffffff"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_collage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:layout_marginRight="20dip"
                    android:layout_marginLeft="10dip"
                    android:textSize="20sp"
                    android:background="@null"
                    android:id="@+id/et_xueyuan"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的学院" />
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_collage" />
            <LinearLayout
                android:background="#ffffff"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:layout_marginRight="20dip"
                    android:textSize="20sp"
                    android:background="@null"
                    android:layout_marginLeft="10dip"
                    android:id="@+id/et_class"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的班级" />
            </LinearLayout>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_classroom" />
            <LinearLayout
                android:background="#ffffff"
               android:padding="10dp"
                android:id="@+id/ll_zhuce3_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:phoneNumber="true"
                    android:layout_marginRight="20dip"
                    android:textSize="20sp"
                    android:background="@null"
                    android:layout_marginLeft="10dip"
                    android:id="@+id/et_xuehao"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的学号" />
            </LinearLayout>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_student" />
            <LinearLayout
                android:background="#ffffff"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view5"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center"
                    android:phoneNumber="true"
                    android:layout_marginRight="20dip"
                    android:textSize="20sp"
                    android:background="@null"
                    android:id="@+id/et_phone"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的短号" />
            </LinearLayout>
            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_phone" />
            <LinearLayout
                android:background="#ffffff"
                android:padding="10dp"
                android:id="@+id/ll_zhuce3_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view6"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dip"
                    android:text="身份证号"
                    android:textSize="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:gravity="right"
                    android:textSize="20sp"
                    android:layout_marginRight="20dip"
                    android:background="@null"
                    android:id="@+id/et_id"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的身份证号" /> />
            </LinearLayout>
            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_zhuce3_user" />
            <TextView
                style="@style/zhuce_button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下一步"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="5dip" />
</RelativeLayout>
